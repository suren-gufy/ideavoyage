{
  "version": 2,
  "buildCommand": "npm install && npm run vercel-build",
  "outputDirectory": "dist/public",
  "functions": {
    "api/*.ts": { "runtime": "@vercel/node@20.x" }
  },
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}